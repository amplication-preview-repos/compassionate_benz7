datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Transaction {
  amount    Float?
  createdAt DateTime                  @default(now())
  id        String                    @id @default(cuid())
  typeField EnumTransactionTypeField?
  updatedAt DateTime                  @updatedAt
  user      User?                     @relation(fields: [userId], references: [id])
  userId    String?
}

model Room {
  betAmount Float?
  coinSide  EnumRoomCoinSide?
  createdAt DateTime          @default(now())
  creator   String?
  games     Game[]
  id        String            @id @default(cuid())
  status    EnumRoomStatus?
  updatedAt DateTime          @updatedAt
}

model Game {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  player1   String?
  player2   String?
  room      Room?    @relation(fields: [roomId], references: [id])
  roomId    String?
  updatedAt DateTime @updatedAt
  winner    String?
}

model User {
  balance      Float?
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  lastName     String?
  password     String
  roles        Json
  transactions Transaction[]
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}

enum EnumTransactionTypeField {
  Option1
}

enum EnumRoomCoinSide {
  Option1
}

enum EnumRoomStatus {
  Option1
}
